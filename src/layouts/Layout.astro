---
import "@fontsource/poppins";
import Header from "../components/Header.astro";
import CalltoAction from "../components/CalltoAction.astro";
import Solution from "../components/Solution.astro";
import Ubicanos from "../components/Ubicanos.astro";
import Footer from "../components/Footer.astro";
import Interventions from "../components/Interventions.astro";
import Therapies from "../components/Therapies.astro";
import PlanCard from "../components/PlanCard.astro";
import Team from "../components/Team.astro";
import Questions from "../components/Questions.astro";
import Evidence from "../components/Evidence.astro";

interface Props {
  title: string;
  description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title></head
  >
  <body class="flex flex-col items-center justify-center">
    <Header />

    <CalltoAction />
    <Solution />
    <Interventions />
    <Therapies />
    <Team />
    <Questions />

    <section class="py-16">
      <div class="text mb-8">
        <h3 class="text-cyan-400 font-bold text-xl">Nuestros Planes</h3>
        <h2 class="text-3xl font-bold text-gray-800">
          Calidad de servicio a tu alcance
        </h2>
      </div>

      <div class="container mx-auto grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
        <PlanCard
          planName="Plan A"
          sessionsPerWeek="1"
          sessionsPerMonth="4"
          buttonLink="https://example.com/plan-a"
        />

        <PlanCard
          planName="Plan B"
          sessionsPerWeek="2"
          sessionsPerMonth="8"
          buttonLink="https://example.com/plan-b"
        />

        <PlanCard
          planName="Plan C"
          sessionsPerWeek="3"
          sessionsPerMonth="12"
          buttonLink="https://example.com/plan-c"
        />

        <PlanCard
          planName="Plan D"
          sessionsPerWeek="5"
          sessionsPerMonth="20"
          buttonLink="https://example.com/plan-d"
        />
      </div>
    </section>

    <Evidence />
    <Ubicanos />
    <Footer />

    <slot />
    <style is:global>
      body {
        display: flex;
        flex-direction: column;
        background-image: url("../assets/fondo.jpg");
        background-repeat: repeat;
        background-size: auto;
        background-position: top left;
        backdrop-filter: blur(5px);
      }
    </style>
  </body>
</html>
