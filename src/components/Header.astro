---
import Mail from "./icons/Mail.astro";
import Phone from "./icons/Phone.astro";
import Ubication from "./icons/Ubication.astro";
import { Image } from "astro:assets";
import logo from "../assets/logo.png";
---

<header
  class="bg-blue-800 z-10 flex items-center justify-center h-24 w-full mb-20 relative"
>
  <div class="container mx-auto flex justify-between items-center px-4">
    <!--Logo y nombre -->
    <div class="flex items-center space-x-4">
      <Image
        src={logo}
        alt="Logo de PLENAMente"
        width={60}
        height={60}
        quality={"high"}
        loading="eager"
      />
      <h1 class="text-white font-light text-xl md:text-3xl tracking-wide">
        PLENA-Mente
      </h1>
    </div>

    <!-- Menú móvil controlado por Alpine.js -->
    <div x-data="{ open: false }" class="lg:hidden">
      <button @click="open = !open" class="text-white focus:outline-none">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-8 w-8"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>

      <!-- Menú desplegable para móviles -->
      <nav
        x-show="open"
        @click.away="open = false"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 transform -translate-y-2"
        x-transition:enter-end="opacity-100 transform translate-y-0"
        x-transition:leave="transition ease-in duration-300"
        x-transition:leave-start="opacity-100 transform translate-y-0"
        x-transition:leave-end="opacity-0 transform -translate-y-2"
        class="absolute top-full left-0 right-0 mt-2 flex flex-col space-y-3 bg-blue-700 rounded-lg p-4 z-20 w-full"
      >
        <div class="flex items-center space-x-2">
          <Ubication class="text-white h-6 w-6" />
          <div>
            <h2 class="text-white text-sm font-medium">Ubicación:</h2>
            <h3 class="text-white text-sm">
              Huayna Capac 713 Urb. Santa Maria
            </h3>
          </div>
        </div>
        <div class="flex items-center space-x-2">
          <Mail class="text-white h-6 w-6" />
          <div>
            <h2 class="text-white text-sm font-medium">Correo:</h2>
            <h3 class="text-white text-sm">plenamentetrujillo@gmail.com</h3>
          </div>
        </div>
        <div class="flex items-center space-x-2">
          <Phone class="text-white h-6 w-6" />
          <div>
            <h2 class="text-white text-sm font-medium">Teléfono:</h2>
            <h3 class="text-white text-sm">+51 937 562 487</h3>
          </div>
        </div>
      </nav>
    </div>

    <!-- Menú completo para pantallas grandes -->
    <nav class="hidden lg:flex space-x-8">
      <div class="flex items-center space-x-2">
        <Ubication class="text-white size-8" />
        <div>
          <h2 class="text-white text-lg font-medium">Ubicación:</h2>
          <h3 class="text-white">Huayna Capac 713 Urb. Santa Maria</h3>
        </div>
      </div>
      <div class="w-px h-15 bg-white mx-4"></div>
      <div class="flex items-center space-x-2">
        <Mail class="text-white size-8" />
        <div>
          <h2 class="text-white text-lg font-medium">Correo:</h2>
          <h3 class="text-white">plenamentetrujillo@gmail.com</h3>
        </div>
      </div>
      <div class="w-px h-15 bg-white mx-4"></div>
      <div class="flex items-center space-x-2">
        <Phone class="text-white size-8" />
        <div>
          <h2 class="text-white text-lg font-medium">Teléfono:</h2>
          <h3 class="text-white">+51 937 562 487</h3>
        </div>
      </div>
    </nav>
  </div>
</header>
