---
import Mail from "./icons/Mail.astro";
import Phone from "./icons/Phone.astro";
import Ubication from "./icons/Ubication.astro";
---

<header
  class="bg-blue-800 fixed top-0 z-10 flex items-center justify-center h-24 w-full mx-100"
>
  <div class="container mx-auto flex justify-between items-center">
    <div class="flex items-center space-x-4">
      <div class="logo-container">
        <img src="/src/assets/logo.png" alt="PLENA-Mente logo" />
      </div>
      <h1 class="text-white font-light text-3xl tracking-wide">PLENA-Mente</h1>
    </div>
    <nav class="flex space-x-8">
      <div class="flex items-center space-x-2">
        <Ubication class="text-white w-8 h-8" />
        <div>
          <h2 class="text-white text-lg font-medium">Ubicación:</h2>
          <h3 class="text-white">Huayna Capac 713 Urb. Santa Maria</h3>
        </div>
      </div>
      <div class="w-px h-15 bg-white mx-4"></div>
      <div class="flex items-center space-x-2">
        <Mail class="text-white w-8 h-8" />
        <div>
          <h2 class="text-white text-lg font-medium">Correo:</h2>
          <h3 class="text-white">plenamentetrujillo@gmail.com</h3>
        </div>
      </div>
      <div class="w-px h-15 bg-white mx-4"></div>
      <div class="flex items-center space-x-2">
        <Phone class="text-white w-8 h-8" />
        <div>
          <h2 class="text-white text-lg font-medium">Teléfono:</h2>
          <h3 class="text-white">+51 937 562 487</h3>
        </div>
      </div>
    </nav>
  </div>
</header>

<style>
  .logo-container {
    margin-top: 10px;
    height: 90px;
    width: 100px;
    overflow: hidden;
    position: relative;
  }

  .logo-container img {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    height: 160%;
    width: 110%;
  }
</style>
