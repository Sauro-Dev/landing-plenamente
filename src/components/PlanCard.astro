---
import Check from "./icons/Check.astro";

interface Props {
  planName: string;
  sessionsPerWeek: string;
  sessionsPerMonth: string;
  buttonLink: string;
}

const { planName, sessionsPerWeek, sessionsPerMonth, buttonLink } = Astro.props;
---

<div class="bg-gray-200 p-6 shadow-md rounded-lg flex flex-col justify-between h-full">
  <h3
    class="text-2xl font-semibold text-gray-800 mb-4 border-b-2 border-blue-800 pb-2"
  >
    {planName}
  </h3>
  <ul class="text-left space-y-2 mb-6">
    <li class="flex items-center">
      <Check class="mr-2 text-blue-800" />
      {sessionsPerWeek} sesión(es) por semana
    </li>
    <li class="flex items-center">
      <Check class="mr-2 text-blue-800" />
      {sessionsPerMonth} sesiones al mes
    </li>
    <li class="flex items-center">
      <Check class="mr-2 text-blue-800" /> Horario personalizado
    </li>
  </ul>
  <div class="flex justify-center mt-4">
    <a
      href={buttonLink}
      class="bg-blue-800 text-white py-2 px-4 rounded-md shadow hover:bg-blue-900 transition-colors duration-300"
      target="_blank"
      rel="noopener noreferrer"
    >
      Saber más
    </a>
  </div>
</div>
