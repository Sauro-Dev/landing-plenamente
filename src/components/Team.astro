---
import { Image } from "astro:assets";
import arleen from "../assets/arleen.jpg";
import rosa from "../assets/rosa.jpg";
import ronny from "../assets/ronny.jpg";

const cards = [
  { image: arleen, name: "Arleen Alexandra Guerrero Salinas" },
  { image: rosa, name: "Rosa Katherine Diaz Martinez" },
  { image: ronny, name: "Bryan Ronny Taico Aguilar" },
];
---

<section class="py-16">
  <div class="text-center mb-10">
    <h2 class="text-cyan-400 font-medium text-xl sm:text-2xl">Conoce</h2>
    <h1 class="font-semibold text-3xl sm:text-4xl">Nuestro Equipo</h1>
  </div>

  <div
    class="max-w-6xl mx-auto w-full grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 px-4 sm:px-6 lg:px-8"
  >
    {
      cards.map((card) => (
        <div class="flex flex-col items-center">
          <Image
            src={card.image}
            alt={card.name}
            quality="high"
            loading="lazy"
            class="w-full h-auto object-cover rounded-3xl border-cyan-400 border-4"
          />
          <h3 class="mt-4 text-lg sm:text-xl font-semibold text-center">
            {card.name}
          </h3>
          <h4 class="text-cyan-400 font-medium text-base sm:text-lg text-center">
            Terapeuta
          </h4>
        </div>
      ))
    }
  </div>
</section>
