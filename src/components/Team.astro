---
import { Image } from "astro:assets";
import arleen from "../assets/arleen.jpg";
import rosa from "../assets/rosa.jpg";
import ronny from "../assets/ronny.jpg";

const cards = [
  { image: arleen, name: "Arleen Alexandra Guerrero Salinas" },
  { image: rosa, name: "Rosa Katherine Diaz Martinez" },
  { image: ronny, name: "Bryan Ronny Taico Aguilar" },
];
---

<h2 class="text-cyan-400 font-medium text-2xl">Conoce</h2>
<h1 class="font-semibold text-4xl mb-10">Nuestro Equipo</h1>

<div
  class="max-w-6xl mx-auto w-full mb-20 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
>
  {
    cards.map((card) => (
      <div class="flex flex-col items-center">
        <Image
          src={card.image}
          alt={card.name}
          quality="high"
          loading="lazy"
          class="w-full h-full object-cover rounded-3xl border-cyan-400 border-4"
        />
        <h3 class="mt-4 text-xl font-semibold">{card.name}</h3>
        <h4 class="text-cyan-400 font-medium text-lg">Terapeuta</h4>
      </div>
    ))
  }
</div>
