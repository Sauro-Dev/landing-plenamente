---
import Check from "./icons/Check.astro";
---

<section class="py-16">
  <div class="text mb-8">
    <h3 class="text-cyan-400 font-bold text-xl">Nuestros Planes</h3>
    <h2 class="text-3xl font-bold text-gray-800">
      Calidad de servicio a tu alcance
    </h2>
  </div>

  <!-- Grid de los planes PlenaMENTE -->
  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
    <!-- Tarjeta Plan A -->
    <div class="bg-gray-200 p-6 shadow-md">
      <h3
        class="text-2xl font-bold text-gray-800 mb-4 border-b-2 border-blue-800 pb-2"
      >
        Plan A
      </h3>
      <ul class="text-left space-y-2 mb-6">
        <li class="flex items-center">
          <Check class="mr-2" /> 1 sesión por semana
        </li>
        <li class="flex items-center">
          <Check class="mr-2" /> 4 sesiones al mes
        </li>
        <li class="flex items-center">
          <Check class="mr-2" /> Horario personalizado
        </li>
      </ul>
      <div class="flex justify-center">
        <button
          class="bg-blue-800 text-white py-2 px-4 rounded-md shadow hover:bg-blue-900"
        >
          Saber más
        </button>
      </div>
    </div>
    <!-- Tarjeta Plan B -->
    <div class="bg-gray-200 p-6 shadow-md">
      <h3
        class="text-2xl font-bold text-gray-800 mb-4 border-b-2 border-blue-800 pb-2"
      >
        Plan B
      </h3>
      <ul class="text-left space-y-2 mb-6">
        <li class="flex items-center">
          <Check class="mr-2" /> 2 sesiones por semana
        </li>
        <li class="flex items-center">
          <Check class="mr-2" /> 8 sesiones al mes
        </li>
        <li class="flex items-center">
          <Check class="mr-2" /> Horario personalizado
        </li>
      </ul>
      <div class="flex justify-center">
        <button
          class="bg-blue-800 text-white py-2 px-4 rounded-md shadow hover:bg-blue-900"
        >
          Saber más
        </button>
      </div>
    </div>

    <!-- Tarjeta Plan C -->
    <div class="bg-gray-200 p-6 shadow-md">
      <h3
        class="text-2xl font-bold text-gray-800 mb-4 border-b-2 border-blue-800 pb-2"
      >
        Plan C
      </h3>
      <ul class="text-left space-y-2 mb-6">
        <li class="flex items-center">
          <Check class="mr-2" /> 3 sesiones por semana
        </li>
        <li class="flex items-center">
          <Check class="mr-2" /> 12 sesiones al mes
        </li>
        <li class="flex items-center">
          <Check class="mr-2" /> Horario personalizado
        </li>
      </ul>
      <div class="flex justify-center">
        <button
          class="bg-blue-800 text-white py-2 px-4 rounded-md shadow hover:bg-blue-900"
        >
          Saber más
        </button>
      </div>
    </div>

    <!-- Tarjeta Plan D -->
    <div class="bg-gray-200 p-6 shadow-md">
      <h3
        class="text-2xl font-bold text-gray-800 mb-4 border-b-2 border-blue-800 pb-2"
      >
        Plan D
      </h3>
      <ul class="text-left space-y-2 mb-6">
        <li class="flex items-center">
          <Check class="mr-2" /> 5 sesiones por semana
        </li>
        <li class="flex items-center">
          <Check class="mr-2" /> 20 sesiones al mes
        </li>
        <li class="flex items-center">
          <Check class="mr-2" /> Horario personalizado
        </li>
      </ul>
      <div class="flex justify-center">
        <button
          class="bg-blue-800 text-white py-2 px-4 rounded-md shadow hover:bg-blue-900"
        >
          Saber más
        </button>
      </div>
    </div>
  </div>
</section>
