---
import { Image } from "astro:assets";
import ofrecemos from "../assets/ofrecemos.jpg";
import Compromiso from "./icons/Compromiso.astro";
import Paciencia from "./icons/Paciencia.astro";
import Honestidad from "./icons/Honestidad.astro";
import Respeto from "./icons/Respeto.astro";
---

<section class="py-16">
  <div class="container mx-auto grid gap-12 md:gap-16 md:grid-cols-2 items-center px-4">
    <!-- Columna Izquierda: "Que ofrecemos" y imagen -->
    <div class="space-y-4 text-center md:text-left">
      <h3 class="text-cyan-500 font-bold text-lg">Que ofrecemos</h3>
      <h2 class="text-3xl sm:text-4xl font-semibold text-black">El mejor servicio a</h2>
      <h2 class="text-3xl sm:text-4xl font-semibold text-black">Nuestros Pacientes</h2>
      <div class="flex justify-center md:justify-start mt-6">
        <Image
          src={ofrecemos}
          alt="Equipo Plenamente"
          class="rounded-3xl shadow-lg border-4 border-cyan-400 w-full max-w-sm sm:max-w-sm"
        />
      </div>
    </div>

    <!-- Columna Derecha: Valores -->
    <div class="grid gap-6 grid-cols-2 sm:gap-8">
      <!-- Compromiso -->
      <div class="flex flex-col items-center text-center">
        <div
          class="w-32 h-32 sm:w-48 sm:h-48 bg-cyan-300 rounded-full flex items-center justify-center shadow-2xl"
        >
          <!-- Contenedor del ícono y el texto -->
          <div class="flex items-center justify-center">
            <!-- Ícono con margen derecho -->
            <Compromiso class="w-8 h-8 sm:w-10 sm:h-10" />
            <!-- Espaciador manual -->
            <div class="w-1"></div>
            <p class="text-sm sm:text-xl font-normal text-black">Compromiso</p>
          </div>
        </div>
      </div>

      <!-- Paciencia -->
      <div class="flex flex-col items-center text-center">
        <div
          class="w-32 h-32 sm:w-48 sm:h-48 bg-cyan-400 rounded-full flex items-center justify-center shadow-2xl"
        >
          <!-- Contenedor del ícono y el texto -->
          <div class="flex items-center justify-center">
            <!-- Ícono con margen derecho -->
            <Paciencia class="w-8 h-8 sm:w-10 sm:h-10" />
            <!-- Espaciador manual -->
            <div class="w-1"></div>
            <p class="text-sm sm:text-xl font-normal text-black">Paciencia</p>
          </div>
        </div>
      </div>

      <!-- Honestidad -->
      <div class="flex flex-col items-center text-center">
        <div
          class="w-32 h-32 sm:w-48 sm:h-48 bg-cyan-400 rounded-full flex items-center justify-center shadow-2xl"
        >
          <!-- Contenedor del ícono y el texto -->
          <div class="flex items-center justify-center">
            <!-- Ícono con margen derecho -->
            <Honestidad class="w-8 h-8 sm:w-10 sm:h-10" />
            <!-- Espaciador manual -->
            <div class="w-1"></div>
            <p class="text-sm sm:text-xl font-normal text-black">Honestidad</p>
          </div>
        </div>
      </div>

      <!-- Respeto -->
      <div class="flex flex-col items-center text-center">
        <div
          class="w-32 h-32 sm:w-48 sm:h-48 bg-cyan-300 rounded-full flex items-center justify-center shadow-2xl"
        >
          <!-- Contenedor del ícono y el texto -->
          <div class="flex items-center justify-center">
            <!-- Ícono con margen derecho -->
            <Respeto class="w-8 h-8 sm:w-10 sm:h-10" />
            <!-- Espaciador manual -->
            <div class="w-1"></div>
            <p class="text-sm sm:text-xl font-normal text-black">Respeto</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
